generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Car {
  plate          String           @id
  color          String
  idOwner        String
  Owner          Owner            @relation(fields: [idOwner], references: [id])
  Transaction    Transaction[]
}

model Owner {
  id             String           @id
  name           String
  tel            String
  Car            Car[]
  Transaction    Transaction[]
}

model Transaction {
  id       String    @id
  idCar    String
  idOwner  String
  checkin  DateTime
  checkout DateTime?
  active   Boolean @default(true)
  Car      Car       @relation(fields: [idCar], references: [plate])
  Owner    Owner     @relation(fields: [idOwner], references: [id])
}